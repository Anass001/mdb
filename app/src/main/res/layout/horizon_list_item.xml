<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:id="@+id/mov_lt"
    android:layout_width="100.0dip"
    android:layout_height="wrap_content"
    android:layout_margin="7.0dip">
    <FrameLayout
        android:layout_width="100.0dip"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.CardView
                app:cardCornerRadius="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/horposter"
                    android:layout_width="100.0dip"
                    android:layout_height="150.0dip"
                    android:src="@drawable/test_poster" />
            </android.support.v7.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/horaddtodata"
            android:background="@android:color/white"
            android:padding="3.0dip"
            android:visibility="gone"
            android:layout_width="40.0dip"
            android:layout_height="85.0dip"
            android:layout_marginLeft="5.0dip">
            <ImageView
                android:id="@+id/watch_list"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/favorite_dark_enable"
                android:layout_weight="1.0" />
            <ImageView
                android:id="@+id/favorite"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/dark_watchlist_add"
                android:scaleType="fitEnd"
                android:layout_weight="1.0" />
        </LinearLayout>
    </FrameLayout>
    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <TextView
            android:textStyle="normal"
            android:lines="2"
            android:textColor="#ffffffff"
            android:gravity="center_horizontal"
            android:id="@+id/hortitle"
            android:paddingTop="3.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Aquaman"
            android:fontFamily="sans-serif" />
    </LinearLayout>
</LinearLayout>