<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_height="match_parent">
<LinearLayout android:orientation="vertical" android:layout_above="@id/adViewPeople" android:background="@color/colorPrimaryDark" android:layout_width="match_parent" android:layout_height="match_parent"
  xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/layout1"
        android:visibility="gone"
        android:gravity="center">
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/layout3"
        android:gravity="center"
        android:orientation="vertical">

    </LinearLayout>
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:id="@+id/layout2"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom">
                <ImageView
                    android:id="@+id/people_poster"
                    android:layout_width="match_parent"
                    android:layout_height="250.0dip"
                    />
                <TextView
                    android:textSize="22.0sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:id="@+id/people_name"
                    android:padding="10.0dip"
                    android:background="@drawable/gradient_text"
                    android:layout_width="fill_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_height="wrap_content"
                    />
                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:paddingStart="-12dp" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10.0dip"
                android:orientation="vertical"
                android:animateLayoutChanges="true">
                <TextView
                    android:textColor="@android:color/white"
                    android:id="@+id/people_beo"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="READ MORE â«¸"
                    android:textSize="15dp"
                    android:textColor="@android:color/white"
                    android:id="@+id/readmore"
                    android:textStyle="bold"/>
            </LinearLayout>


            <TextView
                android:textSize="19.0sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="-5dp"
                android:layout_marginTop="10dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Personal Info" />
            <LinearLayout
                android:orientation="horizontal"
                android:padding="10.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Known For : " />
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Gender : " />
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Birthday : " />
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Place of Birth : " />
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="homepage : " />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/people_kf"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        />
                    <TextView
                        android:id="@+id/people_gr"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                         />
                    <TextView
                        android:id="@+id/people_birthd"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                         />
                    <TextView
                        android:id="@+id/people_birthp"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                         />
                    <TextView
                        android:id="@+id/people_pop"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#376E9E"
                         />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:padding="10.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:textSize="20.0dip"
                    android:textStyle="bold"
                    android:textColor="#ffffffff"
                    android:paddingBottom="8.0dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Images" />
                <android.support.v7.widget.CardView
                    android:layout_width="120dp"
                    android:layout_height="180dp"
                    app:cardCornerRadius="8dp">
                    <ImageView
                        android:id="@+id/pr1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop" />
                    <TextView
                        android:id="@+id/posterstxt"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:padding="3dp"
                        android:background="@drawable/gradient_text"
                        android:text="10 Backdrops"
                        android:textStyle="bold"
                        android:textColor="@android:color/white" />
                </android.support.v7.widget.CardView>

            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:paddingLeft="10.0dip"
                android:paddingTop="10.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:textSize="20.0dip"
                    android:textStyle="bold"
                    android:textColor="#ffffffff"
                    android:paddingBottom="5.0dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Movies" />
                <android.support.v7.widget.RecyclerView
                    android:paddingStart="-5dp"
                    android:id="@+id/castm_list"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:paddingLeft="10.0dip"
                android:paddingTop="10.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:textSize="20.0dip"
                    android:textStyle="bold"
                    android:textColor="#ffffffff"
                    android:paddingBottom="5.0dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TV Shows" />
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/castt_list"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="-5dp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>

    <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adViewPeople"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:background="@android:color/transparent"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-4577547346540393/4754421782"/>

</RelativeLayout>